{
  "compilerOptions": {
     "typeRoots":[
        "./interface",
        "./node_modules/@types"
     ],
     "lib": [
        "es5",
        "es6",
        "DOM"
     ],
     "strictPropertyInitialization": false,
     "target": "es5",
     "moduleResolution": "node",
     "outDir": "./build",
     "rootDir": "./src", 
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "resolveJsonModule": true
  }
}
